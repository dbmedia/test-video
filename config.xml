<?xml version='1.0' encoding='utf-8'?>
<widget id="net.dbmediaweb.ttexp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>True Training Experience 2</name>
    <description>
        Learning with fun
    </description>
    <author email="dbmedia.marketing@gmail.com" href="http://www.dbmediaweb.net/">
        DBMedia
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="fullscreen" value="true" />
    <preference name="orientation" value="landscape" />
    <hook type="before_build" src="scripts/build_ember_app.sh" />
</widget>
